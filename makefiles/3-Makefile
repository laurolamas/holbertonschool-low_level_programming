CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

%.o: %.c
	$(CC) -c $<

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) *.o

fclean:
	$(RM) *~ *.o $(NAME)

re:
	$(MAKE) -B 
